<?xml version="1.0"?>
<package>
    <metadata>
        <id>MSBuilder.WriteItemsToFile</id>
        <version>0.1.0</version>
        <title>MSBuilder: WriteItemsToFile write items and their metadata to an XML file in MSBuild format.</title>
        <authors>Mobile Essentials</authors>
        <licenseUrl>https://github.com/MobileEssentials/MSBuilder/blob/master/LICENSE</licenseUrl>
        <projectUrl>https://github.com/MobileEssentials/MSBuilder/</projectUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <description>
			Writes items with their full metadata to
			an MSBuild project "fragment".

			The resulting XML file can be directly imported
			by an MSBuild project, or read on-demand by
			the ReadItemsFromFile MSBuilder.
		</description>
        <copyright>Copyright 2016</copyright>
        <tags>msbuild inline codetask</tags>
		<developmentDependency>true</developmentDependency>
		<dependencies>
			<dependency id="MSBuilder.CodeTaskAssembly" version="0.2.4" />
		</dependencies>
	</metadata>
	<files>
		<file src="Readme.txt" />
		<file src="WriteItemsToFile.targets" target="build\MSBuilder.WriteItemsToFile.targets" />
	</files>
</package>