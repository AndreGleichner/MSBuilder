<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003" >

	<PropertyGroup>
		<CodeTaskAssembly Condition="'$(MSBuildAssemblyVersion)' == ''">$(MSBuildBinPath)\Microsoft.Build.Tasks.v4.0.dll</CodeTaskAssembly>
		<!-- In VS2013, the assembly contains the VS version. -->
		<CodeTaskAssembly Condition="'$(MSBuildAssemblyVersion)' == '12.0'">$(MSBuildToolsPath)\Microsoft.Build.Tasks.v12.0.dll</CodeTaskAssembly>
		<!-- In VS2015+, the assembly was renamed, hopefully this will be the last condition! -->
		<CodeTaskAssembly Condition="'$(MSBuildAssemblyVersion)' != '' and '$(MSBuildAssemblyVersion)' &gt;= '14.0'">$(MSBuildToolsPath)\Microsoft.Build.Tasks.Core.dll</CodeTaskAssembly>
	</PropertyGroup>

	<Target Name="Build">
		<Test Condition="'' != ''">
			<Output TaskParameter="Xml" ItemName="Xml" />
		</Test>
	</Target>
	
	<UsingTask TaskName="Test" 
			   TaskFactory="CodeTaskFactory" 
			   AssemblyFile="$(CodeTaskAssembly)">

		<ParameterGroup>
			<Xml Output="true" ParameterType="System.String[]" />
		</ParameterGroup>

		<Task>
			<Reference Include="System.Core" />
			<Reference Include="System.Xml" />
			<Reference Include="System.Xml.Linq" />
			<Reference Include="Microsoft.Build.Framework" />
			<Using Namespace="System"/>
			<Using Namespace="System.Xml"/>
			<Using Namespace="System.Xml.Linq"/>
			<Code Type="Fragment" Language="cs">
				<![CDATA[
				var e = XElement.Parse("<Foo>chota</Foo>");
				var item = new TaskItem(Guid.NewGuid().ToString(), new Dictionary<string, string>
					{
						{ "Xml", e.ToString() }
					});

				Xml = item;
]]>
			</Code>
		</Task>

	</UsingTask>

	<UsingTask TaskName="Test2" TaskFactory="CodeTaskFactory" AssemblyFile="$(CodeTaskAssembly)">

		<ParameterGroup>
			<Xml Required="true" ParameterType="Microsoft.Build.Framework.ITaskItem" />
		</ParameterGroup>

		<Task>
			<Reference Include="System.Core" />
			<Reference Include="System.Xml" />
			<Reference Include="System.Xml.Linq" />
			<Reference Include="Microsoft.Build.Framework" />
			<Using Namespace="System"/>
			<Using Namespace="System.Xml"/>
			<Using Namespace="System.Xml.Linq"/>
			<Code Type="Fragment" Language="cs">
				<![CDATA[
				Log.LogMessage(Xml.GetMetadata("Xml"));
]]>
			</Code>
		</Task>

	</UsingTask>
</Project>